@model FourthWebApp.Models.Account
@{
	ViewData["Title"] = "Register";
}

<h1>Register</h1>

<b>@ViewBag.ErrorMessage</b>

<form method="post" action="/Home/Register">
	<table>
		<tr>
			<td><label>Username:</label></td>
			<td><input type="text" name="Username" value="@Model?.Username" required /></td>
		</tr>
		<tr>
			<td><label>First Name:</label></td>
			<td><input type="text" name="FirstName" value="@Model?.FirstName" required /></td>
		</tr>
		<tr>
			<td><label>Email:</label></td>
			<td><input type="email" name="Email" value="@Model?.Email" required /></td>
		</tr>
	</table>
	<input type="submit" />
</form>